.home {
  background-color: #f5f5f5;
}

/* 导航栏 */
.nav {
  display: flex;
  padding: 0 20rpx;
  align-items: center;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.nav-left {
  display: flex;
  justify-content: space-between;
  width: 200rpx;
}

.nav-right {
  width: 500rpx;
  margin-left: 20rpx;
}

.hello {
  font-size: 28rpx;
}

.username {
  color: #0c34ba;
  font-size: 28rpx;
}

.pop {
  width: 450rpx !important;
  margin-top: 100rpx;
  margin-left: 260rpx;
  opacity: 0.7;
  padding: 20rpx;
}

.pop-item {
  padding: 10rpx 0;
  border-bottom: 1rpx solid black;
}

/* 轮播图 */
.banner {
  width: 710rpx;
  height: calc(710rpx * 2/3);
  padding: 0 20rpx;
}

.banner>swiper {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  overflow: hidden;
}

.banner-img {
  width: 100%;
  height: 100%;
}

.hot {
  padding: 0 20rpx;
}

.hot-bg {
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hot-title {
  color: #fff;
  background-color: #0c34ba;
  /* 将行内元素转换为行内块 */
  display: inline-block;
  padding: 20rpx 40rpx;
  margin: 20rpx 0;
  border-top-right-radius: 50rpx;
}

.hot-list {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.btn {
  background-color: #0c34ba !important;
}

.hot-icon {
  position: absolute;
  background-color: #0c34ba;
  color: #fff;
  margin-left: 20rpx;
  padding: 10rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.hot-item {
  background-color: #fff;
  padding: 20rpx;
  margin-top: 30rpx;
  border-radius: 28rpx;
  overflow: hidden;
}

.item-img {
  width: 300rpx;
  height: 250rpx;
}

.item-img>image {
  width: 100%;
  height: 100%;
  border-radius: 28rpx;
  overflow: hidden;
}

.name {
  margin-top: 20rpx; 
  color: #383838;
}

.enname {
  width: 300rpx;
  /* 文字超出变成省略号 */
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 24rpx;
  color: #999;
}

.price {
  font-size: 26rpx;
  color: #1c2994;
  margin-top: 20rpx;
  font-weight: 600;
}