.address {
  position: relative;
  background-color: #f7f7f7;
}

.top-bg {
  width: 750rpx;
  height: 200rpx;
  background-color: #0c34ba;
}

.card {
  position: absolute;
  width: 88%;
  background-color: #fff;
  padding: 20rpx 20rpx;
  top: 150rpx;
  left: 3%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.card-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}

.card-item:nth-child(-n+2) {
  border-bottom: 1rpx solid #ccc;
}

.left {
  padding: 20rpx 20rpx;
}

.top {
  display: flex;
}

.name {
  font-size: 30rpx;
}

.phone {
  margin-left: 10rpx;
}

.moren {
  width: 70rpx;
  height: 30rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  border-radius: 20rpx;
  background-color: #0c34ba;
  margin-left: 10rpx;
  margin-top: 5rpx;
}

.bottom {
  font-size: 28rpx;
  margin: 10rpx 0;
}

.right {
  margin-right: 40rpx;
}

.foot {
  padding: 0 20rpx;
  margin-top: 850rpx;
}

.btn {
  background-color: #0c34ba !important;
}