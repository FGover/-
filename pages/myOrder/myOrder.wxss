.myOrder {
  position: relative;
  background-color: #f7f7f7;
}

.top-bg {
  width: 750rpx;
  height: 200rpx;
  background-color: #0c34ba;
}

.card1 {
  position: absolute;
  width: 88%;
  top: 140rpx;
  left: 3%;
  padding: 20rpx 20rpx;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.my-top {
  display: flex;
}

.all {
  flex: 1;
  text-align: center;
}

.ing {
  flex: 1;
  text-align: center;
}

.done {
  flex: 1;
  text-align: center;
}

.three {
  display: flex;
}

.line1,
.line2,
.line3 {
  margin-top: 20rpx;
  background-color: #0c34ba;
  width: 100rpx;
  height: 5rpx;
}

.line1 {
  margin-left: 60rpx;
}

.line2 {
  margin-left: 278rpx;
}

.line3 {
  margin-left: 500rpx;
}

.card2 {
  width: 88%;
  margin-left: 3%;
  padding: 20rpx 20rpx;
  background-color: #fff;
  margin-top: 70rpx;
  border-top-left-radius: 30rpx; 
  border-top-right-radius: 30rpx;
}

.myorder {
  overflow: auto;
}

.title {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.order-item {
  display: flex;
  padding: 0 20rpx 20rpx;
}

.order-left {
  flex: 1;
  height: 150rpx;
}

.order-left>image {
  width: 100%;
  height: 100%;
}

.order-right {
  flex: 3;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.right-top {
  display: flex;
  align-items: center;
}

.Name {
  font-size: 28rpx;
}

.rule {
  font-size: 24rpx;
  margin-left: 20rpx;
  color: rgba(204, 204, 204, 0.959);
}

.enname {
  margin-top: 2rpx;
  font-size: 24rpx;
  color: rgba(204, 204, 204, 0.959);
}

.right-bottom {
  display: flex;
  justify-content: space-between;
}

.price {
  margin-top: 30rpx;
  font-weight: bold;
  font-size: 24rpx;
  color: #0c34ba;
}

.count {
  margin-top: 30rpx;
  margin-right: 30rpx;
  font-size: 24rpx;
  color: rgba(22, 21, 21, 0.493);
}

.card3 {
  padding: 0 20rpx;
  margin: 10rpx 20rpx 0;
  background-color: #fff;
  border-top: 2rpx dashed #ccc;
}

.time {
  padding: 20rpx 0;
  font-size: 28rpx;
}

.sum {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
}

.sum-left {
  font-size: 28rpx;
}

.sum-right {
  font-size: 28rpx;
  font-weight: bold;
  color: #0c34ba;
}
